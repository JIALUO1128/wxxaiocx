<!-- 自定义顶部栏 -->
<view class="nav-bar" style="height:{{navBarHeight+40}}px;">
  <view>
    <view>
      <slot></slot>
    </view>
    <view>
      <image src="../../img/images/icons/search.png" mode="" />
      <input class="search" placeholder="输入关键词！" style="height:{{menuHeight}}px; min-height:{{menuHeight}}px; line-height:{{menuHeight}}px; left:{{menuRight}}px; top:{{menuTop}}px;"></input>
    </view>
    <image src="../../img/images/icons/scan.png" mode="" bind:tap="scanMate"/>
    <image src="../../img/images/icons/message-black.png" mode="" bind:tap="switchTab"/>
  </view>
</view>

<!-- 占位，高度与顶部栏一样 -->
<view style="height:{{navBarHeight+40}}px; background-color: #eeeeee;"></view>