/**index.wxss**/
.swiper-container{
  height: 150PX;
}
.item{
  width: 100%;
  height: 280rpx;
  border-radius: 25px;
}
.image{
  width: 100%;
  height: 280rpx;
}
/* 文字 */
.head-text{
  position: absolute;
  width: 50%;
  height: 200rpx;
  top: 40rpx;
  left: 40rpx;
}
.btn{
  position: absolute;
  top: 140rpx;
  left: 40rpx;
  width: 116px;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  color: #ffffff;
  border: 1px solid #ffffff;
  border-radius: 50px;
  font-size: 24rpx;
}
text:first-child{
  position: absolute;
  left: 40rpx;
  color: #ffffff;
  font-size: 28rpx;
}
text:nth-child(2){
  position: absolute;
  top: 60rpx;
  left: 40rpx;
  color:#ffffff;
  font-size: 24rpx;
}